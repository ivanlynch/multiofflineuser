<mvc:View controllerName="com.test.login.controller.App" 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:f="sap.f" 
	xmlns:m="sap.m" 
	xmlns:card="sap.f.cards" 
	xmlns:core="sap.ui.core" displayBlock="true" height="100%">
	<App id="Content" class="loginBG">
		<Page showHeader="false" class="loginBG">
			<content>
				<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
					<Image class="loginLogo" src="../img/logo1.png"/>
					<f:Card class="sapUiMediumMargin" width="300px">
						<f:header>
							<card:Header title="Welcome" subtitle="Logged Users"/>
						</f:header>
						<f:content>
							<List showSeparators="None">
								<CustomListItem>
									<HBox alignItems="Center" justifyContent="SpaceBetween">
										<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
											<f:Avatar src="../img/persona.jpg" displaySize="XL"/>
										</VBox>
										<ObjectStatus class="sapUiTinyMargin" text="{revenue}" state= "{statusSchema}"/>
									</HBox>
								</CustomListItem>
							</List>
							<HBox alignItems="Center">
								<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
									<Button text="Add"/>
								</VBox>
							</HBox>
						</f:content>
					</f:Card>
				</VBox>
			</content>
		</Page>
	</App>
</mvc:View>


